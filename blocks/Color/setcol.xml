<shrimp type="function" name="SetCol" description="Set the components of a colour" author="rconstruct">
	<input name="r" description="red component" type="float" default="0"/>
	<input name="g" description="green component" type="float" default="0"/>
	<input name="b" description="blue component" type="float" default="0"/>
	<output name="col" description="colour output" type="color"/>
	<rsl_code>
	setcomp( $(col), 0, $(r) );
	setcomp( $(col), 1, $(g) );
	setcomp( $(col), 2, $(b) );
	</rsl_code>
	<usage>Sets the components of a color</usage>
</shrimp>
