<shrimp type="function" name="Color2Point" description="Color to point conversion" author="rconstruct">
    <input name="in" description="Input color" type="color" default="0"/>
    <output name="out" description="Output value" type="point"/>
	<rsl_code>
	    $(out) = point( comp( $(in), 0), comp( $(in), 1), comp( $(in), 2) );
	</rsl_code>
</shrimp>
