<shrimp type="function" name="Add" description="Addition block" author="rconstruct">
	<input name="A" description="1st input" type="float color point vector normal" type_parent="val" default="1"/>
	<input name="B" description="2nd or subsequent inputs" type="float color point vector normal" type_parent="val" multi="+" default="1"/>
	<output name="val" description="val = A + B" type="float color point vector normal"/>
	<rsl_code>
	$(val) = $(A) + $(B);
	</rsl_code>
	<usage>All inputs must be of the same type. The operation is done in parallel for each component.</usage>
</shrimp>
