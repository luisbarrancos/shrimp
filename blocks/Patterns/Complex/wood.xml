<shrimp type="function" name="Wood" description="Wood rings pattern" author="rconstruct">
	<input name="ringscale" description="Ring scale factor" type="float" default="15"/>
	<input name="txtscale" description="Texture scale" type="float" default="1"/>
	<input name="grainy" description="Grainyness" type="float" default="1"/>
	<input name="pp" description="Surface point" type="point" default="P"/>
	<output name="val" description="Output color" type="float"/>
	<include>extrapatterns.h</include>
	<code>
        $(val) = wood2( $(ringscale), $(txtscale), $(grainy), $(pp) );
	</code>
	<usage>Wood pattern block, based on wood2.sl shader by Larry Gritz.</usage>
</shrimp>
