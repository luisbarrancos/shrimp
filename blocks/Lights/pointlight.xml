<shrimp type="function" name="PointLight" description="Point light shader" author="rconstruct">
	<input name="inten" description="Light intensity" type="float" default="200"/>
	<input name="lcolor" description="Light color" type="color" type_parent="Cl" default="color( 1, .93, .81 )"/>
	<input name="lpos" description="Light source position" type="point" default="point &quot;shader&quot; ( -15, 10, 5 )"/>
	<input name="decay" description="Light decay, see help" type="float" default="1"/>
	<input name="shadowmap" description="Shadow map" storage="uniform" type="string" default="&quot;&quot;"/>
	<input name="blur" description="Shadow map blur" type="float" default="0"/>
	<input name="width" description="Shadow map filter width" type="float" default="1"/>
	<input name="samples" description="Shadow map samples" type="float" default="1"/>
	<input name="bias" description="Shadow map bias" type="float" default="0.01"/>
	<input name="filter" description="Shadow map filter" storage="uniform" type="string" default="&quot;gaussian&quot;"/>
	<input name="nondiff" description="Non-diffuse light" storage="uniform" type="float" default="0" />
	<input name="nonspec" description="Non-specular light" storage="uniform" type="float" default="0" />
	<output name="Cl" description="Light ray color" type="color"/>
	<rsl_include>rsl_shrimp_lights.h</rsl_include>
	<rsl_code>
		__nondiffuse = $(nondiff);
		__nonspecular = $(nonspec);
		$(Cl) = spointlight( $(lpos), $(inten), $(decay), $(blur), $(width),
					$(samples), $(bias), $(shadowmap), $(filter), $(lcolor) );
	</rsl_code>
	<usage>Point light shader. Decay can be linear(1), or squared (2).</usage>
</shrimp>
