<shrimp type="function" name="DistantLight" description="Distant light shader" author="rconstruct">
	<input name="inten" description="Light intensity" type="float" default="1"/>
	<input name="lcolor" description="Light color" type="color" default="color( 1, .93, .81 )"/>
	<input name="from" description="Light origin point" type="point" default="point &quot;shader&quot; (-15, 10, 5)"/>
	<input name="to" description="Light target point" type="point" default="point &quot;shader&quot; (0, 0, 0)"/>
	<input name="shadowname" description="Shadow map name" storage="uniform" type="string" default="&quot;&quot;"/>
	<input name="samples" description="Shadow map samples" type="float" default="4"/>
	<input name="width" description="Shadow map filter width" type="float" default="1"/>
	<input name="blur" description="Shadow map blur" type="float" default="0"/>
	<input name="bias" description="Shadow map bias" type="float" default="-1"/>
	<input name="filter" description="Shadow map filter" storage="uniform" type="string" default="&quot;gaussian&quot;"/>
	<output name="Cl" description="Light ray color" type="color"/>
	<include>lights.h</include>
	<rsl_code>
		$(Cl) = $(inten) * $(lcolor) * sdistantlight( $(from), $(to),
				$(shadowname), $(filter), $(samples), $(width), $(blur),
				$(bias), $(inten), $(lcolor) );
	</rsl_code>
<usage>Distant light shader. Filter type defaults to gaussian, with box and triangle as optional. Bias defaults to global default, -1.</usage>
</shrimp>
