<shrimp type="function" name="Minverse" description="Invert matrix M." author="rconstruct">
    <input name="minput" description="Matrix input" type="matrix" default="1"/>
    <output name="mout" description="Inverted matrix" type="matrix"/>
	<rsl_code>
	#if RENDERER == _3delight
		$(mout) = inverse( $(minput) );
	#else
		$(mout) = 1 / $(minput) ;
	#endif
	</rsl_code>
	<usage>Inverts the input matrix.</usage>
</shrimp>
