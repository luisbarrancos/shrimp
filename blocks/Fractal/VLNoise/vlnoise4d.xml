<shrimp type="function" name="VLNoise4D" description="4D Ken Musgrave VLNoise" author="rconstruct">
	<input name="p" description="point to sample noise at" type="point" default="P"/>
	<input name="scale" description="Scale" type="float" default="1"/>
	<input name="t" description="4d value" type="float" default="time"/>
	<input name="amplitude" description="Amplitude of noise" type="float" default="1"/>
	<output name="val" description="Noise value at p" type="float color vector point"/>
	<include>fractal.h</include>
	<code>
	#define $(val)_$(val:type)
	#ifdef $(val)_float
		$(val) = $(amplitude) * VLNoisexy( $(p), $(t), $(scale) );
	#else
		$(val) = $(amplitude) * $(val:type) vsnoisexy(
					snoise( $(p) ) * $(scale) + $(p),
					snoise( $(t) ) * $(scale) + $(t) );
	#endif
	</code>
	<usage>4D Ken Musgrave VLNoise.
	</usage> 
</shrimp>
