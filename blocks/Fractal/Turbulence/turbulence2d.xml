<shrimp type="function" name="Turbulence2D" description="2 dimensional turbulence function." author="rconstruct">
	<input name="x" description="X coordinate to sample turbulence at" storage="varying" type="float" default="s"/>
	<input name="y" description="Y coordinate to sample turbulence at" storage="varying" type="float" default="t"/>
	<input name="fwidth" description="Filter width for antialiasing" type="float" default="0"/>
	<input name="octaves" description="Maximum octaves of noise" storage="uniform" type="float" default="5"/>
	<input name="lacunarity" description="Gap of successive frequencies" storage="uniform" type="float" default="2.17"/>
	<input name="gain" description="Controls the contrast of the turbulence" storage="uniform" type="float" default="0.5"/>
	<input name="amplitude" description="Amplitude of turbulence" type="float" default="1"/>
	<output name="val" description="Turbulence value at (x,y)" type="color vector point float"/>
	<rsl_include>rsl_shrimp_fractal.h</rsl_include>
	<rsl_code>
	#define $(blockname)_$(val:type)
	#ifdef $(blockname)_float
		$(val) = $(amplitude) * turbulence( $(x), $(y), $(fwidth), $(octaves),
					$(lacunarity), $(gain));
	#else
		$(val) = $(amplitude) * $(val:type) ( vector vturbulence( $(x), $(y),
					$(fwidth), $(octaves), $(lacunarity), $(gain) ) );
	#endif
	#undef $(blockname)_$(val:type)

	</rsl_code>
	<usage>2 dimensional turbulence fractal function with Perlin noise basis. Returns a result in the [0,1] range by default.</usage>
</shrimp>
