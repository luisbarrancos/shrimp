<shrimp type="function" name="Noise3D" description="3 dimensional perlin noise function" author="rconstruct">
	<input name="p" description="point to sample noise at" type="point" default="P"/>
	<input name="amplitude" description="Amplitude of noise" type="float" default="1"/>
	<output name="val" description="Noise value at point p, in range 0 - 1" type="float color point vector"/>
	<code>
	$(val) = $(amplitude) * $(var_type) noise( $(p) );
	</code>
</shrimp>
